---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ServiceCard from "../components/ServiceCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import TestimonialCard from "../components/TestimonialCard.astro";
import Stats from "../components/Stats.astro";
import CTA from "../components/CTA.astro";

const services = [
  {
    title: "Fabrication Services",
    description:
      "Custom metal fabrication for structural works, equipment frames, and specialized industrial components.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75a4.5 4.5 0 01-4.884 4.484c-1.076-.091-2.264.071-2.95.904l-7.152 8.684a2.548 2.548 0 11-3.586-3.586l8.684-7.152c.833-.686.995-1.874.904-2.95a4.5 4.5 0 016.336-4.486l-3.276 3.276a3.004 3.004 0 002.25 2.25l3.276-3.276c.256.565.398 1.192.398 1.852z" /><path stroke-linecap="round" stroke-linejoin="round" d="M4.867 19.125h.008v.008h-.008v-.008z" /></svg>',
    link: "/services#fabrication",
  },
  {
    title: "Conveyor Systems",
    description:
      "Design, manufacturing, and installation of various industrial conveyor solutions tailored to your needs.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" /></svg>',
    link: "/services#conveyor",
  },
  {
    title: "Custom Solutions",
    description:
      "Engineered solutions for specific industrial challenges, focusing on innovation and practical application.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>',
    link: "/services#custom",
  },
  {
    title: "Installation Services",
    description:
      "Professional installation of all our fabrication and conveyor systems with thorough testing and training.",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" /></svg>',
    link: "/services#installation",
  },
];

const featuredProjects = [
  {
    title: "Automated Assembly Line",
    category: "Conveyor System",
    imageUrl:
      "https://images.unsplash.com/photo-1581091226033-d5c48150dbaa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80",
    description:
      "Custom-designed conveyor system for an automotive parts manufacturer, increasing production efficiency by 35%.",
    link: "/projects/automated-assembly-line",
  },
  {
    title: "Steel Structure Fabrication",
    category: "Fabrication",
    imageUrl:
      "https://images.unsplash.com/photo-1590856029826-c7a73142bbf1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80",
    description:
      "Heavy-duty steel framework for a new manufacturing facility, completed on time and under budget.",
    link: "/projects/steel-structure-fabrication",
  },
  {
    title: "Pharmaceutical Packaging Line",
    category: "Custom Solution",
    imageUrl:
      "https://images.unsplash.com/photo-1563453392212-326f5e854473?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80",
    description:
      "End-to-end solution including conveyors, sorting systems, and quality control for a pharmaceutical client.",
    link: "/projects/pharmaceutical-packaging-line",
  },
];

const testimonials = [
  {
    quote:
      "Nabiya Enterprises delivered our conveyor system ahead of schedule and exactly to specifications. Their team's expertise and attention to detail were impressive.",
    author: "James Wilson",
    company: "GlobalManufacturing Inc.",
  },
  {
    quote:
      "The custom fabrication work Nabiya did for our facility upgrade was excellent. They understood our unique requirements and executed flawlessly.",
    author: "Sarah Chen",
    company: "Innovative Products Ltd.",
  },
  {
    quote:
      "We've worked with Nabiya on multiple projects over the past 5 years. Their consistent quality and reliability make them our go-to engineering partner.",
    author: "Robert Johnson",
    company: "Industrial Solutions Co.",
  },
];
---

<Layout
  title="Home"
  description="Nabiya Enterprises - Professional engineering company specializing in fabrication services and conveyor systems with a focus on quality and innovation."
>
  <!-- Hero Section -->
  <Hero
    title="Precision Engineering & Innovation"
    subtitle="Professional fabrication services and conveyor systems tailored to your industrial needs"
    backgroundImage="https://images.unsplash.com/photo-1513828583688-c52646db42da?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
  />

  <!-- Services Section -->
  <section id="services" class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title" data-aos="fade-up">Our Services</h2>
        <p
          class="section-subtitle mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          We provide comprehensive engineering solutions to meet your industrial
          needs
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          services.map((service, index) => (
            <ServiceCard
              title={service.title}
              description={service.description}
              icon={service.icon}
              link={service.link}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- About Brief Section -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right">
          <img
            src="https://images.unsplash.com/photo-1581091007718-0c50d599bfd0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
            alt="About Nabiya Enterprises"
            class="rounded-lg shadow-custom"
          />
        </div>

        <div data-aos="fade-left">
          <h2 class="section-title">Excellence in Engineering Since 2008</h2>
          <p class="text-secondary-600 mb-6">
            At Nabiya Enterprises, we combine technical expertise with
            innovative solutions to deliver high-quality fabrication and
            conveyor systems that exceed expectations.
          </p>
          <p class="text-secondary-600 mb-6">
            Our team of experienced engineers and technicians work closely with
            clients to understand their unique requirements and provide custom
            solutions that enhance productivity and efficiency.
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-start">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary-600 mr-2 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              <span
                >Certified engineering team with decades of combined experience</span
              >
            </li>
            <li class="flex items-start">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary-600 mr-2 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              <span
                >State-of-the-art fabrication facility with modern equipment</span
              >
            </li>
            <li class="flex items-start">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary-600 mr-2 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Commitment to quality, safety, and on-time delivery</span>
            </li>
          </ul>
          <a href="/about" class="btn btn-primary">Learn More About Us</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <Stats />

  <!-- Featured Projects -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title" data-aos="fade-up">Featured Projects</h2>
        <p
          class="section-subtitle mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Explore some of our successful projects and custom solutions
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          featuredProjects.map((project) => (
            <ProjectCard
              title={project.title}
              category={project.category}
              imageUrl={project.imageUrl}
              description={project.description}
              link={project.link}
            />
          ))
        }
      </div>

      <div class="text-center mt-12" data-aos="fade-up">
        <a href="/projects" class="btn btn-primary">View All Projects</a>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title" data-aos="fade-up">What Our Clients Say</h2>
        <p
          class="section-subtitle mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Feedback from clients who have experienced our commitment to
          excellence
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          testimonials.map((testimonial) => (
            <TestimonialCard
              quote={testimonial.quote}
              author={testimonial.author}
              company={testimonial.company}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTA bgColor="primary" />
</Layout>
