  />

  <!-- Industries Overview -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title" data-aos="fade-up">
          Serving Diverse Industries
        </h2>
        <p
          class="section-subtitle mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Our expertise spans across multiple sectors, providing tailored
          solutions for specific industry requirements
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          industries.map((industry, index) => (
            <IndustryCard
              title={industry.title}
              imageUrl={industry.imageUrl}
              description={industry.description}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Industry Solutions -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title" data-aos="fade-up">Our Industry Solutions</h2>
        <p
          class="section-subtitle mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          How our services address the specific needs of different industries
        </p>
      </div>

      {
        industries.slice(0, 4).map((industry, index) => (
          <div
            class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16 ${index % 2 !== 0 ? "lg:flex-row-reverse" : ""}`}
          >
            <div
              class={`${index % 2 !== 0 ? "order-1 lg:order-2" : "order-1"}`}
              data-aos="fade-right"
            >
              <img
                src={industry.imageUrl}
                alt={industry.title}
                class="rounded-lg shadow-custom"
              />
            </div>

            <div
              class={`${index % 2 !== 0 ? "order-2 lg:order-1" : "order-2"}`}
              data-aos="fade-left"
            >
              <h3 class="text-2xl font-semibold mb-4 text-primary-800">
                {industry.title} Solutions
              </h3>
              <p class="text-secondary-600 mb-6">{industry.description}</p>

              <h4 class="text-lg font-semibold mb-3 text-secondary-800">
                Key Benefits:
