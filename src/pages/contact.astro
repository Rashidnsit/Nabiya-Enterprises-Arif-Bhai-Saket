---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ContactMethod from "../components/ContactMethod.astro";

const contactMethods = [
  {
    title: "Call Us",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" /></svg>',
    content:
      "Talk to our team directly about your project requirements or any questions you may have.",
    actionText: "Call +1234567890",
    actionLink: "tel:+1234567890",
  },
  {
    title: "WhatsApp",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51-.172-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z" /></svg>',
    content:
      "Send us a message on WhatsApp for quick responses to your inquiries and quote requests.",
    actionText: "Message on WhatsApp",
    actionLink:
      "https://wa.me/1234567890?text=I'm%20interested%20in%20your%20services",
  },
  {
    title: "Email Us",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>',
    content:
      "Send us a detailed message about your project requirements or any questions you may have.",
    actionText: "Email info@nabiyaenterprises.com",
    actionLink: "mailto:info@nabiyaenterprises.com",
  },
];
---

<Layout
  title="Contact Us"
  description="Get in touch with Nabiya Enterprises to discuss your fabrication and conveyor system requirements. Contact us via phone, WhatsApp, or email."
>
  <!-- Hero Section -->
  <Hero
    title="Contact Nabiya Enterprises"
    subtitle="Get in touch with our team to discuss how we can help with your engineering requirements"
    ctaText="View Our Services"
    ctaLink="/services"
    backgroundImage="https://images.unsplash.com/photo-1521791136064-7986c2920216?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
  />

  <!-- Contact Methods -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title" data-aos="fade-up">Get In Touch</h2>
        <p
          class="section-subtitle mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          We're here to answer your questions and discuss your project
          requirements
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          contactMethods.map((method) => (
            <ContactMethod
              title={method.title}
              icon={method.icon}
              content={method.content}
              actionText={method.actionText}
              actionLink={method.actionLink}
            />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Map & Office Location -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title" data-aos="fade-up">Our Location</h2>
        <p
          class="section-subtitle mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Visit our office and manufacturing facility
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Map (Embed a responsive iframe) -->
        <!-- <div
          class="rounded-lg overflow-hidden shadow-custom h-96"
          data-aos="fade-right"
        > -->
        <!-- Replace with your actual Google Maps embed code -->
        <!-- <div class="w-full h-full bg-gray-200 flex items-center justify-center">
          <p class="text-gray-600">Google Maps Embed</p>
        </div>
      </div> -->
        <!-- // -->
        <!-- Map (Embed a static view using Google Maps iframe) -->
        <div
          class="rounded-lg overflow-hidden shadow-custom h-96"
          data-aos="fade-right"
        >
          <!-- Google Maps iframe for Saket, Delhi, India -->
          <div
            class="w-full h-full bg-gray-200 flex items-center justify-center"
          >
            <iframe
              src="https://www.google.com/maps?q=28.5617,77.2672&hl=es;z=14&output=embed"
              width="100%"
              height="100%"
              frameborder="0"
              style="border:0; border-radius: 8px;"
              allowfullscreen
            >
            </iframe>
          </div>
        </div>

        <!-- Office Information -->
        <div data-aos="fade-left">
          <h3 class="text-2xl font-semibold mb-4 text-primary-800">
            Nabiya Enterprises Headquarters
          </h3>
          <p class="text-secondary-600 mb-6">
            Our main office and manufacturing facility is strategically located
            to serve clients efficiently. Feel free to visit us to discuss your
            requirements in person or to tour our facility.
          </p>

          <div class="space-y-4 mb-8">
            <div class="flex items-start">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary-600 mr-3 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <h4 class="font-semibold text-secondary-900">Address:</h4>
                <p class="text-secondary-600">
                  123 Industrial Zone, Engineering District<br />City, Country -
                  12345
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary-600 mr-3 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h4 class="font-semibold text-secondary-900">
                  Business Hours:
                </h4>
                <p class="text-secondary-600">
                  Monday - Friday: 9:00 AM - 6:00 PM<br />Saturday: 9:00 AM -
                  1:00 PM<br />Sunday: Closed
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-primary-600 mr-3 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              <div>
                <h4 class="font-semibold text-secondary-900">Phone:</h4>
                <p class="text-secondary-600">+1234567890</p>
              </div>
            </div>
          </div>

          <a
            href="https://wa.me/1234567890?text=I'm%20interested%20in%20getting%20a%20quote"
            class="btn btn-primary mr-4"
          >
            Get Directions
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title" data-aos="fade-up">
          Frequently Asked Questions
        </h2>
        <p
          class="section-subtitle mx-auto"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Common questions about our services and processes
        </p>
      </div>

      <div class="max-w-3xl mx-auto">
        <div class="space-y-6">
          <!-- FAQ Item 1 -->
          <div class="bg-white rounded-lg shadow-custom p-6" data-aos="fade-up">
            <h3 class="text-xl font-semibold mb-3 text-secondary-900">
              What industries do you serve?
            </h3>
            <p class="text-secondary-600">
              We serve a wide range of industries including automotive,
              pharmaceutical, food & beverage, aerospace, electronics, warehouse
              & logistics, heavy manufacturing, and packaging. Our solutions are
              tailored to meet the specific requirements of each industry.
            </p>
          </div>

          <!-- FAQ Item 2 -->
          <div
            class="bg-white rounded-lg shadow-custom p-6"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            <h3 class="text-xl font-semibold mb-3 text-secondary-900">
              How long does a typical project take?
            </h3>
            <p class="text-secondary-600">
              Project timelines vary depending on complexity, scope, and
              specific requirements. Simple fabrication projects may take 2-4
              weeks, while comprehensive conveyor systems or custom solutions
              could take 8-12 weeks or more. During our initial consultation,
              we'll provide a more accurate timeline based on your specific
              project.
            </p>
          </div>

          <!-- FAQ Item 3 -->
          <div
            class="bg-white rounded-lg shadow-custom p-6"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <h3 class="text-xl font-semibold mb-3 text-secondary-900">
              Do you provide maintenance services for your systems?
            </h3>
            <p class="text-secondary-600">
              Yes, we offer comprehensive maintenance services for all our
              fabrication and conveyor systems. We provide routine maintenance,
              emergency repairs, and preventive maintenance programs to ensure
              your systems operate at peak performance and have maximum
              longevity.
            </p>
          </div>

          <!-- FAQ Item 4 -->
          <div
            class="bg-white rounded-lg shadow-custom p-6"
            data-aos="fade-up"
            data-aos-delay="300"
          >
            <h3 class="text-xl font-semibold mb-3 text-secondary-900">
              Can you work with our existing equipment or systems?
            </h3>
            <p class="text-secondary-600">
              Absolutely. We frequently integrate our solutions with existing
              equipment and systems. Our engineers will assess your current
              setup and design solutions that seamlessly work with what you
              already have, whether it's modifying existing systems or creating
              new components that interface with your equipment.
            </p>
          </div>

          <!-- FAQ Item 5 -->
          <div
            class="bg-white rounded-lg shadow-custom p-6"
            data-aos="fade-up"
            data-aos-delay="400"
          >
            <h3 class="text-xl font-semibold mb-3 text-secondary-900">
              How do I get a quote for my project?
            </h3>
            <p class="text-secondary-600">
              You can request a quote by calling us, sending a WhatsApp message,
              or emailing us with details about your project. The more
              information you provide (such as specifications, drawings, photos,
              or videos), the more accurate our initial quote will be. After
              reviewing your requirements, we'll arrange a consultation to
              discuss your project in more detail.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
