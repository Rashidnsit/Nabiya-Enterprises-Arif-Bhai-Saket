  <!-- Author Info -->
  <div class="flex items-center">
    <img src={avatar} alt={author} class="w-12 h-12 rounded-full object-cover mr-4" />
    <div>
      <p class="font-semibold text-secondary-900">{author}</p>
      <p class="text-sm text-secondary-500">{company}</p>
