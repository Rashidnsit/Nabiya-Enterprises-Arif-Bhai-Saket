---
interface Props {
  title: string;
  icon: string;
  content: string;
  actionText: string;
  actionLink: string;
}

const { title, icon, content, actionText, actionLink } = Astro.props;
---

<div class="bg-white rounded-lg shadow-custom p-6 border-t-4 border-primary-600 text-center hover:shadow-lg transition-all" data-aos="fade-up">
  <div class="w-16 h-16 rounded-full bg-primary-50 flex items-center justify-center mx-auto mb-4 text-primary-600">
    <Fragment set:html={icon} />
  </div>
  
  <h3 class="text-xl font-semibold mb-2 text-secondary-900">
    {title}
  </h3>
  
  <p class="text-secondary-600 mb-5">
    {content}
  </p>
  
  <a href={actionLink} class="btn btn-primary w-full">
    {actionText}
  </a>
</div>