---
interface Props {
  title: string;
  category: string;
  imageUrl: string;
  description: string;
  link: string;
}

const { title, category, imageUrl, description, link } = Astro.props;
---

<div class="group overflow-hidden rounded-lg shadow-custom" data-aos="fade-up">
  <!-- Image Container with Overlay -->
  <div class="relative overflow-hidden h-64">
    <img 
      src={imageUrl} 
      alt={title} 
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-secondary-950/80 to-transparent opacity-70"></div>
    
    <!-- Category Badge -->
    <div class="absolute top-4 left-4 bg-primary-600 text-white text-sm font-medium py-1 px-3 rounded-full">
      {category}
    </div>
  </div>
  
  <!-- Content -->
  <div class="p-6 bg-white">
    <h3 class="text-xl font-semibold mb-2 text-secondary-900 group-hover:text-primary-600 transition-colors">
      {title}
    </h3>
    
    <p class="text-secondary-600 mb-4 line-clamp-2">
      {description}
    </p>
    
    <a href={link} class="inline-flex items-center font-medium text-primary-600 hover:text-primary-700 transition-colors">
      View Project
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </a>
  </div>
</div>