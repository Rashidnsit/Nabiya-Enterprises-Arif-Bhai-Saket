---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage: string;
}

const { 
  title, 
  subtitle, 
  ctaText = "Get a Quote", 
  ctaLink = "https://wa.me/1234567890?text=I'm%20interested%20in%20getting%20a%20quote",
  backgroundImage 
} = Astro.props;
---

<section class="relative h-screen min-h-[600px] flex items-center text-white overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src={backgroundImage} 
      alt="Nabiya Enterprises" 
      class="w-full h-full object-cover"
      fetchpriority="high"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-secondary-950/80 to-secondary-900/50"></div>
  </div>
  
  <!-- Content -->
  <div class="container-custom relative z-10 mt-16">
    <div class="max-w-3xl" data-aos="fade-up" data-aos-delay="100">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
        {title}
      </h1>
      <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-2xl">
        {subtitle}
      </p>
      <div class="flex flex-wrap gap-4">
        <a href={ctaLink} class="btn btn-accent">
          {ctaText}
        </a>
        <a href="/services" class="btn btn-secondary">
          Our Services
        </a>
      </div>
    </div>
  </div>
  
  <!-- Scroll Down Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 animate-bounce">
    <a href="#services" aria-label="Scroll down">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
      </svg>
    </a>
  </div>
</section>